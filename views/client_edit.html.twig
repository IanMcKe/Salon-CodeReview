<html>
    <head>
        <title>V-Chrome</title>
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.1/css/bootstrap.min.css">
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.4.0/css/font-awesome.min.css">
        <link rel="stylesheet" href="/styles.css">
    </head>
    <body>
        <nav class="navbar navbar-default navbar-fixed-top">
            <div class="container-fluid">
                <div class="navbar-header">
                    <a class="navbar-brand" href="/"><i class="fa fa-viacoin"></i>-Chrome</a>
                </div>
            </div>
        </nav>
        <div class="big-background">
            <div class="jumbotron">
                <div class="container-fluid">
                    <h2>Update {{ client.getName }}</h2>
                    <form action="/clients/{{ client.getId }}" method="post">
                        <div class="form-group">
                            <input name="_method" type="hidden" value="patch">
                            <label for="name">Enter new Name:</label>
                            <input id="name" name="name" type="text" value="{{ client.getName }}" class="form-control">
                            <label for="phone">Enter new Phone:</label>
                            <input id="phone" name="phone" type="text" value="{{ client.getPhone }}" class="form-control">
                            <label for="email">Enter new Email:</label>
                            <input id="email" name="email" type="text" value="{{ client.getEmail }}" class="form-control">
                        </div>
                        <button type="submit" class="btn btn-default">Update <i class="fa fa-pencil-square-o"></i></button>
                    </form>
                    <form action="/clients/{{ client.getId }}" method="post">
                        <input name="_method" type="hidden" value="delete">
                        <button type="submit" class="btn btn-default">Delete <i class="fa fa-trash-o"></i></button>
                    </form>
                    <form action="/stylists/{{ stylist.getId }}">
                        <button type="submit" class="btn btn-default"><i class="fa fa-arrow-left"></i> Back</button>
                    </form>
                </div>
            </div>
        </div>
    </body>
</html>
